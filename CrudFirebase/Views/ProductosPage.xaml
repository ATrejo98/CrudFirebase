<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CrudFirebase.ViewModels"
             x:Class="CrudFirebase.Views.ProductosPage">

    <ContentPage.BindingContext>
        <local:ProductosViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Label Text="Nombre:" />
        <Entry Text="{Binding NuevoProducto.Nombre}" />

        <Label Text="DescripciÃ³n:" />
        <Entry Text="{Binding NuevoProducto.Descripcion}" />

        <Label Text="Precio:" />
        <Entry Text="{Binding NuevoProducto.Precio}" Keyboard="Numeric" />

        <Button Text="Agregar Producto" Command="{Binding AddProductoCommand}" />

        <ListView ItemsSource="{Binding Productos}" Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Nombre}" FontSize="20" />
                            <Label Text="{Binding Descripcion}" FontSize="16" />
                            <Label Text="{Binding Precio, StringFormat='Precio: {0:C}'}" FontSize="16" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
